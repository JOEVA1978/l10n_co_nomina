<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Añadir Código a la Vista Formulario de Tipos de Tiempo Personal -->
    <record id="hr_leave_type_view_form_inherit_l10n_co_nomina" model="ir.ui.view">
        <field name="name">hr.leave.type.form.inherit.l10n_co.nomina</field>
        <field name="model">hr.leave.type</field>
        <!-- Usamos el ID externo correcto -->
        <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form"/>
        <field name="arch" type="xml">
            <!-- Añadimos el campo 'code' después del campo 'name' -->
            <xpath expr="//field[@name='name'][1]" position="after">
                <field name="code"/>
            </xpath>
        </field>
    </record>

</odoo>
