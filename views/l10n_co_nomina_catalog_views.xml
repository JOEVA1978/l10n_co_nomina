<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vistas List/Form para los nuevos modelos (Usando <list>) -->

    <!-- Worker Type -->
    <record id="l10n_co_nomina_worker_type_view_list" model="ir.ui.view">
        <field name="name">l10n_co_nomina.worker.type.list</field>
        <field name="model">l10n_co_nomina.worker.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="country_id" options="{'no_create': True}"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>
    <record id="l10n_co_nomina_worker_type_action" model="ir.actions.act_window">
        <field name="name">Tipos de Trabajador (NE)</field>
        <field name="res_model">l10n_co_nomina.worker.type</field>
        <field name="view_mode">list,form</field> <!-- 'tree' es obsoleto para list, usar 'list' -->
    </record>

