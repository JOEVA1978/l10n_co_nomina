<odoo>
    <record id="action_view_hr_payslip_edi_generate" model="ir.actions.act_window">
        <field name="name">Generar Nóminas Electrónicas</field>
        <!-- Asegúrate de que el modelo 'l10n_co_hr_payroll.edi_gen' exista en tu módulo o cambia el nombre -->
        <field name="res_model">l10n_co_hr_payroll.edi_gen</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="edi_gen_wizard_form" model="ir.ui.view">
        <field name="name">l10n_co_hr_payroll.edi_gen.form</field>
        <field name="model">l10n_co_hr_payroll.edi_gen</field>
        <field name="arch" type="xml">
            <form string="Generar Nóminas Electrónicas">
                <group name="main">
                    <field name="month"/>
                    <field name="year"/>
                    <field name="payroll_type" string="Tipo de Nómina"/>
                </group>
                <footer>
                    <button name="generate" type="object"
                            string="Generar" class="oe_highlight"/>
                    <button special="cancel" string="Cancelar"/>
             </footer>
        </form>
        </field>
    </record>

    <menuitem action="action_view_hr_payslip_edi_generate"
              id="menu_payslip_edi_generate_wizard"
              name="Generar Nomina Electronica"
              parent="l10n_co_nomina.menu_hr_payroll_edi_payslips_root"
              groups="hr_payroll.group_hr_payroll_user"/>
              <!-- Comentario movido fuera de la etiqueta -->
              <!-- Nombre cambiado -->

</odoo>
