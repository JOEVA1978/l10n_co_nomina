<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_company_form_l10n_co_nomina_edi_settings" model="ir.ui.view">
        <field name="name">res.company.form.l10n_co_nomina.edi.settings.inherit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Nómina Electrónica DIAN" name="dian_payroll_settings">
                    <group>
                        <group string="Configuración General APIDIAN">
                            <field name="l10n_co_payroll_api_url"/>
                            <field name="l10n_co_payroll_api_token" password="True"/>
                            <field name="l10n_co_payroll_software_id"/>
                            <field name="l10n_co_payroll_software_pin" password="True"/>
                            <field name="type_document_identification_id"/>
                            <field name="type_organization_id"/>
                            <field name="type_regime_id"/>
                            <field name="l10n_co_nomina_default_resolution_id"/>
                        </group>
                        <group string="Certificado Digital">
                            <field name="l10n_co_payroll_certificate_file" filename="certificate_filename"/>
                            <field name="l10n_co_payroll_certificate_password" password="True"/>
                            
                            <field name="certificate_filename" invisible="1"/>
                        </group>
                    </group>
                    <separator string="Resoluciones de Nómina"/>
                    <div class="text-muted mb-2">
                        Aquí puede gestionar la lista completa de resoluciones de numeración para la nómina electrónica.
                    </div>
                    <field name="l10n_co_payroll_resolution_ids" widget="one2many_list"/>
                </page>
            </notebook>
        </field>
    </record>
</odoo>