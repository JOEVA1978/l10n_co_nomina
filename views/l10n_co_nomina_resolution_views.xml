<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_l10n_co_nomina_resolution_list" model="ir.ui.view">
        <field name="name">l10n_co_nomina.resolution.list</field>
        <field name="model">l10n_co_nomina.resolution</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="company_id" readonly="1" force_save="1"/>
                <field name="type_document_id" required="1"/>
                <field name="prefix" required="1"/>
                <field name="resolution_number"/>
                <field name="from_number" required="1"/>
                <field name="to_number" required="1"/>
                <field name="resolution_date"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="action_l10n_co_nomina_resolution" model="ir.actions.act_window">
        <field name="name">Resoluciones de Nómina</field>
        <field name="res_model">l10n_co_nomina.resolution</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea una nueva resolución de numeración para la Nómina Electrónica.
            </p><p>
                Aquí puedes configurar los prefijos y rangos autorizados por la DIAN.
            </p>
        </field>
    </record>

    <menuitem
        id="menu_l10n_co_nomina_resolution"
        name="Resoluciones de Nómina"
        action="action_l10n_co_nomina_resolution"
        parent="hr_work_entry_contract_enterprise.menu_hr_payroll_configuration"
        sequence="100"/>
</odoo>
